<%= render "filters" %>
<h1>Results for <%= @query %> by <%= @search_condition %></h1>
<% if @search_results.length > 0 %>
	<%= paginate @search_results %>
	<ol class="search-results" start="<%= (@search_results.current_page-1) * 25 + 1 %>">
		<% @search_results.each_with_index do |result| %>
			<li>
				<p>Title: <a class="select" href="<%= book_url result.id %>"><%= result.title %></a></p>
				<p>Genre: <%= result.genre %></p>
				<p>Synopsis: <%= result.synopsis %></p>
				<p><a class="select" href="<%= user_url(result.author) %>">Click here</a> to see author's page</p>
			</li>
		<% end %>
	</ol>
	<%= paginate @search_results %>
<% else %>
	<h3>No results</h3>
<% end %>