<!DOCTYPE html>
<html>
<head>
  <title>Enwritt</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render "layouts/header" %>
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <p class="error"><%= error %></p>
  <% end %>
<% end %>
<%= yield %>

<script>
	var revealed = false;
	$("#magnifying-glass").on("click", function () {
		if (revealed) {
			$(".query").removeClass("revealed")
			revealed = false;
		} else {
			$(".query").addClass("revealed");
			revealed = true;
		}
	});
</script>
</body>
</html>
