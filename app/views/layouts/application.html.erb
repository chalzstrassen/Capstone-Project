<!DOCTYPE html>
<html>
<head>
  <title>Enwritt</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render "layouts/header" %>
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <p class="error"><%= error %></p>
  <% end %>
<% end %>
<% unless logged_in? %>
<%= render "layouts/sidebar" %>
<% end %>
<%= yield %>

</body>
</html>
